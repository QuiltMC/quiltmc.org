---
import Base from "../layouts/base.astro";
---
<Base>
    <style type="text/css" media="screen">
    .err-container {
        margin: 10px auto;
        max-width: 600px;
        text-align: center;
    }
    .err-container h1 {
        margin: 30px 0;
        font-size: 4em;
        line-height: 1;
        letter-spacing: -1px;
    }
    .err-container .pineapple {
        width: 1em;
        vertical-align: top;
    }
    </style>

    <div class="err-container">
    <h1><img class="pineapple" title="Pineapple!" alt=":pineapple:" src="/assets/img/pineapple.png" />404</h1>
    <p><strong>Page not found :(</strong></p>
    <p>The requested page could not be found.</p>
    </div>
</Base>