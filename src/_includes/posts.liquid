{% assign posts = include.posts | default: site.posts %}

{% for post in posts %}
<article class="blog-post">
    <h2 class="subtitle"><a href="{{ post.url }}">{{ post.title }}</a></h2>

    {% include post_info.liquid post=post %}

    <p>{{ post.excerpt }}</p>

    <a href="{{ post.url }}">More...</a>
</article>
{% endfor %}
