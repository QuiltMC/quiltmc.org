---
import Message from "@components/Message.astro";
import { t } from "i18next";
// @ts-ignore
import { Trans } from "astro-i18next/components";
import Link from "@components/Link.astro";

export interface Props {
	style: string,
	iconType: string,
	icon: string,
	tKey: string,
}

const { style, iconType, icon, tKey } = Astro.props as Props;
const header = t(`admonition-${tKey}`, { ns: "home" });

---

<Message style={style}>
	<h2 class="has-text-centered">
		<span class="icon-text">
			<span class={`icon has-text-${iconType} mr-3`}>
				<i class={`fas fa-${icon}`}></i>
			</span>

			<span>{header}</span>
		</span>
	</h2>

	<Trans i18nKey={`message-${tKey}-body`} ns="home">
		{(
		<Link to="help_me">HelpMe</Link>).then(s=>s.expressions[0]).then(s => console.log(s))}
		<slot />
	</Trans>
</Message>