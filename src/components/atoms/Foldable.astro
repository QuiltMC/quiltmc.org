---
import Message from "./Message.astro";
import { Icon } from "astro-icon/components"

export interface Props {
	id: string;
}
const { id } = Astro.props as Props;
---

<Message>
	<details id={id}>
		<summary class="is-flex is-flex-direction-row is-justify-content-start is-align-content-center is-align-items-center">
			<i class="summary-icon is-ltr fa-solid fa-lg fa-circle-chevron-right" />
			<i class="summary-icon is-rtl fa-solid fa-lg fa-circle-chevron-left" />

			<span class="mr-2"><slot name="title" /></span>

			<div class="is-flex-grow-1 mt-1">
				<a href={`#${id}`} class="is-pulled-right">
					<Icon name="mdi:link-variant">
				</a>
			</div>
		</summary>
		<slot />
	</details>
</Message>
