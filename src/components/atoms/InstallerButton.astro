---
import { localizePath } from "@util/Util";
import { t } from "i18next";

export interface Props {
	href: string,
	logo: string,
	titleKey: string,
	altKey: string,
	isAwaiting?: boolean,
}
const { href, logo, titleKey, altKey, isAwaiting = false } = Astro.props as Props;
---

<a class:list={["notification", "is-installer-button", isAwaiting ? "" : "is-dark"]} href={localizePath(href)}>
	<div>
		<p class="subtitle has-text-centered">{t(titleKey)}</p>

		<img src={`/assets/img/launchers/${logo}`} alt={t(altKey)} />
	</div>
</a>