---
import { t } from "i18next";

export interface Props {
	href: string,
	target?: '_self' | '_blank' | '_parent' | '_top',
	type?: string,
	icon?: string,
	textKey: string,
}

const {
	href,
	target = '_self',
	type,
	icon,
	textKey
} = Astro.props as Props;

const buttonClasses = ["button"];
if (type) buttonClasses.push(`is-${type}`)
---

<a {href} {target} class:list={buttonClasses}>
	<span class="icon">
		<i class={icon}></i>
	</span>
	<span>{t(textKey)}</span>
</a>