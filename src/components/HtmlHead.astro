---
import localeSettings from '@data/LocaleSettings';
const { rtl, titleSeparator } = localeSettings 

// TODO: find out a way to do RTL styles.
// import '../styles/style-rtl.scss';
import '../styles/style.scss';
export interface Props {
    title: string,
}

const { title } = Astro.props as Props;

---

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>QuiltMC {titleSeparator} {title}</title>

    <link href="https://fonts.bunny.net/css?family=Roboto" rel="stylesheet" />

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />

    <meta name="msapplication-TileColor" content="#1b112b">
    <meta name="msapplication-config" content="/favicon/browserconfig.xml">
    <meta name="theme-color" content="#1b112b">

    <!-- {% feed_meta %} -->

    <link rel="canonical" href="{{ site.url }}{{ page.url }}"/>

    <meta name="author" content="{{ site.social.name }}"/>
    <meta name="description" content="{{ description }}"/>

    <meta name="twitter:card" content="{{ site.twitter.card }}"/>
    <meta name="twitter:creator" content="@{{ site.twitter.username }}"/>
    <meta name="twitter:site" content="@{{ site.twitter.username }}"/>

    <!-- <meta property="article:published_time" content="{{ page.date | date: "%FT%H:%M:%S%z" }}"/> -->

    <meta property="og:description" content="{{ description }}"/>
    <meta property="og:image" content="{{ site.url }}{{ site.logo }}"/>
    <meta property="og:locale" content="{{ site.lang }}"/>
    <meta property="og:site_name" content="{{ site.title }}"/>
    <meta property="og:title" content="{{ title }}"/>
    <meta property="og:type" content="article"/>
    <meta property="og:url" content="{{ site.url }}{{ page.url }}"/>

    <meta property="twitter:image" content="{{ site.url }}{{ site.logo }}"/>
    <meta property="twitter:title" content="{{ title }}"/>

