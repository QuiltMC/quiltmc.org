---
import Base from "./Base.astro";
import { settings } from "@data/Variables.js"
import config from "@data/Config.js"

const { rtl } = settings
---

<Base navless={true}>
    <section class="hero is-dark has-background-patches">
        <div class="hero-head">
            {/* include navbar.liquid style="no-style" */}
        </div>

        <div class="hero-body">
            <div class="container has-text-centered">
                <picture>
                    <source
                        srcset={ rtl ? "/assets/img/banner-rtl.svg" : "/assets/img/banner.svg" }
                        media="(prefers-color-scheme: dark)"
                    >
                    <img class="is-center" style="margin:auto; height: 8rem;" alt="Quilt Banner"
                        src={ rtl ? "/assets/img/banner-light-rtl.svg" : "/assets/img/banner-light.svg"}
                    />
                </picture>

                <div class="button-grid">
                    <a href="/install/" class="button is-primary">
                        <span class="icon"><i class="fas fa-download"></i></span>
                        <span>Install</span>
                    </a>

                    <a href="/usage/" class="button is-info">
                        <span class="icon"><i class="fas fa-book"></i></span>
                        <span>Usage Docs</span>
                    </a>

                    <a href="https://modder.wiki.quiltmc.org" class="button is-link">
                        <span class="icon"><i class="fas fa-code"></i></span>
                        <span>Developer Wiki</span>
                    </a>

                    <a href="https://github.com/QuiltMC/quilt-template-mod" class="button is-github">
                        <span class="icon"><i class="fas fa-wrench"></i></span>
                        <span>Template Mod</span>
                    </a>
                </div>

                <div class="button-grid">
                    <a href={config.discordCommunity} target="_blank" class="button is-discord">
                        <span class="icon"><i class="fab fa-discord"></i></span>
                        <span>Discord</span>
                    </a>

                    <a href="https://forum.quiltmc.org" target="_blank" class="button is-gradle">
                        <span class="icon"><i class="fab fa-discourse"></i></span>
                        <span>Forum</span>
                    </a>

                    <a href={`https://github.com/${config.githubUsername}`} target="_blank" class="button is-github">
                        <span class="icon"><i class="fab fa-github"></i></span>
                        <span>GitHub</span>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <slot />
</Base>