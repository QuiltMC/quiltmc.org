---
import HeroContent from "./HeroContent.astro";
import { BaseProps } from "./Base.astro";
import { localizePath } from "astro-i18next";
import site from "@data/Site";

//@ts-ignore
import Button from "@components/Button.astro";
import HomeMessage from "@components/index/HomeMessage.astro";
import LatestPosts from "@components/index/LatestPosts.astro";

const props = Astro.props as BaseProps;
---

<HeroContent content={props.content}>
    <div class="columns is-centered mb-5">
        <div class="column is-6">
            <slot name="info" />
        </div>

        <div class="column is-4">
            <HomeMessage style="danger" iconType="danger" icon="warning" tKey="wip">
                <slot name="wip" />
            </HomeMessage>
        </div>
    </div>
    <div class="columns mb-5 mt-2">
        <div class="column">
            <HomeMessage
                style="primary is-fullheight"
                iconType="primary"
                icon="heart"
                tKey="caring"
            >
                <slot name="caring" />
            </HomeMessage>
        </div>
        <div class="column">
            <HomeMessage
                style="link has-text-left is-fullheight"
                iconType="link"
                icon="cubes"
                tKey="modular"
            >
                <slot name="modular" />
            </HomeMessage>
        </div>
        <div class="column">
            <HomeMessage
                style="success has-text-left is-fullheight"
                iconType="success"
                icon="wrench"
                tKey="powerful"
            >
                <slot name="powerful" />
            </HomeMessage>
        </div>
    </div>

    <div class="columns is-centered">
        <div class="column is-10">
            <div class="button-grid">
                <Button
                    href="https://maven.quiltmc.org"
                    target="_blank"
                    type="gradle"
                    icon="fas fa-feather-pointed"
                    textKey="button-maven-repo"
                />
                <Button
                    href={localizePath("/mc-patchnotes/")}
                    type="info"
                    icon="fas fa-notebook"
                    textKey="button-patch-notes"
                />
                <Button
                    href={localizePath("/openings/")}
                    type="primary"
                    icon="fas fa-briefcase"
                    textKey="button-openings"
                />
            </div>

        </div>
    </div>

    <div class="columns is-centered">
        <div class="column is-5">
            <slot name="joinTheCommunity" />

            <div class="button-grid">
                <Button
                    href={site.discordCommunity}
                    target="_blank"
                    type="discord"
                    icon="fab fa-discord"
                    textKey="button-discord-community"
                />
                <Button
                    href={site.forum}
                    target="_blank"
                    type="gradle"
                    icon="fab fa-discourse"
                    textKey="button-forum"
                />
                <Button
                    href={site.mastodon.link}
                    target="_blank"
                    type="mastodon"
                    icon="fab fa-mastodon"
                    textKey="button-mastodon"
                />
                <Button
                    href={site.twitter.link}
                    target="_blank"
                    type="twitter"
                    icon="fab fa-twitter"
                    textKey="button-twitter"
                />
                <Button
                    href={localizePath("/community/")}
                    target="_blank"
                    type="primary"
                    icon="fas fa-ellipsis-h"
                    textKey="button-more"
                />
            </div>

            <slot name="getInvolved" />

            <div class="button-grid">
                <Button
                    href={site.forum}
                    target="_blank"
                    type="gradle"
                    icon="fab fa-discourse"
                    textKey="button-forum"
                />
                <Button
                    href={site.github.link}
                    target="_blank"
                    type="github"
                    icon="fab fa-github"
                    textKey="button-github"
                />
                <Button
                    href={localizePath("/openings/")}
                    type="primary"
                    icon="fas fa-briefcase"
                    textKey="button-openings"
                />
                <Button
                    href={site.discordToolchain}
                    target="_blank"
                    type="discord"
                    icon="fab fa-discord"
                    textKey="button-discord-toolchain"
                />
            </div>

        </div>
        <div class="column is-5">
            <slot name="latestPosts" />
            <LatestPosts />
        </div>
    </div>
</HeroContent>