---
import HeroContent from "./HeroContent.astro";
//@ts-ignore
import Button from "@atoms/Button.astro";
import HomeMessage from "@parts/home/HomeMessage.astro";
import LatestPosts from "@parts/home/LatestPosts.astro";

import { localizePath } from "@util/Util";
import site from "@data/Site";
import SponsorRow from "@parts/sponsors/SponsorRow.astro";
---

<HeroContent content={Astro.props.content}>

	<main slot="main">
		<div class="columns is-centered mb-5">
			<div class="column is-6">
				<slot name="info" />
			</div>

			<div class="column is-4">
				<HomeMessage style="warning" iconType="warning" icon="mdi:warning-octagon-outline" tKey="wip">
					<slot name="wip" />
				</HomeMessage>
			</div>
		</div>

		<div class="columns mb-5 mt-2">
			<div class="column">
				<HomeMessage
					style="primary is-fullheight"
					iconType="primary"
					icon="mdi:cards-heart"
					tKey="caring"
				>
					<slot name="caring" />
				</HomeMessage>
			</div>
			<div class="column">
				<HomeMessage
					style="link has-text-left is-fullheight"
					iconType="link"
					icon="mdi:cube-unfolded"
					tKey="modular"
				>
					<slot name="modular" />
				</HomeMessage>
			</div>
			<div class="column">
				<HomeMessage
					style="success has-text-left is-fullheight"
					iconType="success"
					icon="mdi:wrench"
					tKey="powerful"
				>
					<slot name="powerful" />
				</HomeMessage>
			</div>
		</div>

		<div class="columns is-centered">
			<div class="column is-10">
				<div class="button-grid">
					<Button
						href="https://maven.quiltmc.org"
						target="_blank"
						type="gradle"
						icon="cib:apache"
						textKey="button-maven-repo"
					/>
					<Button
						href={localizePath("/mc-patchnotes")}
						type="info"
						icon="mdi:book"
						textKey="button-patch-notes"
					/>
					<Button
						href={localizePath("/help-wanted")}
						type="primary"
						icon="mdi:briefcase"
						textKey="button-help-wanted"
					/>
				</div>
			</div>
		</div>
	</main>

	<div slot="sponsors">
		<SponsorRow />
	</div>

	<div slot="bottom">
		<div class="columns is-centered">
			<div class="column is-5">
				<slot name="joinTheCommunity" />

				<div class="button-grid">
					<Button
						href={site.discordCommunity}
						target="_blank"
						type="discord"
						icon="discord"
						textKey="button-discord"
					/>

					<Button
						href={site.forum}
						target="_blank"
						type="gradle"
						icon="cib:discourse"
						textKey="button-forum"
					/>

					<Button
						href={site.mastodon.link}
						target="_blank"
						type="mastodon"
						icon="cib:mastodon"
						textKey="button-mastodon"
					/>

					<Button
						href={site.twitter.handle.link}
						target="_blank"
						type="twitter"
						icon="cib:twitter"
						textKey="button-twitter"
					/>

					<Button
						href={localizePath("/community")}
						type="primary"
						icon="mdi:dots-vertical"
						textKey="button-more"
					/>
				</div>

				<slot name="getInvolved" />

				<div class="button-grid">
					<Button
						href={site.forum}
						target="_blank"
						type="gradle"
						icon="cib:discourse"
						textKey="button-forum"
					/>

					<Button
						href={site.github.link}
						target="_blank"
						type="github"
						icon="cib:github"
						textKey="button-github"
					/>

					<Button
						href={localizePath("/help-wanted")}
						type="primary"
						icon="mdi:briefcase"
						textKey="button-help-wanted"
					/>

					<Button
						href={site.discordCommunity}
						target="_blank"
						type="discord"
						icon="discord"
						textKey="button-discord"
					/>
				</div>
			</div>

			<div class="column is-5">
				<slot name="latestPosts" />

				<LatestPosts />
			</div>
		</div>
	</div>

</HeroContent>
