---
import LanguageModal from "@atoms/LanguageModal.astro";
import Footer from "@setpieces/Footer.astro";
import HtmlHead, { HeadProps } from "@setpieces/HtmlHead.astro";
import NavBar from "@setpieces/NavBar.astro";

import i18next from "i18next";
import rtlSettings from "@data/RtlSettings";

export interface BaseProps extends HeadProps {
	isPrivate?: boolean;
}
const content = Astro.props.content as BaseProps;

// extract locale from URL
const match = (Astro.url.pathname + "/").match(/^\/([\w-]+)\//);
if (match && i18next.languages.includes(match[1])) {
	await i18next.changeLanguage(match[1]);
} else {
	await i18next.changeLanguage("en");
}
---

<!DOCTYPE html>
<html lang={i18next.language} dir={rtlSettings().textDirection}>
	<HtmlHead
		title={content?.title}
		description={content?.description}
		date={content?.date}
	/>

	<!-- TODO: move this to quilt-bulma -->
	<style is:global>
		h1       a .header-anchor-container .header-anchor { visibility: hidden; }
		h1:hover a .header-anchor-container .header-anchor { visibility: visible; }
		h2       a .header-anchor-container .header-anchor { visibility: hidden; }
		h2:hover a .header-anchor-container .header-anchor { visibility: visible; }
		h3       a .header-anchor-container .header-anchor { visibility: hidden; }
		h3:hover a .header-anchor-container .header-anchor { visibility: visible; }
		h4       a .header-anchor-container .header-anchor { visibility: hidden; }
		h4:hover a .header-anchor-container .header-anchor { visibility: visible; }
		h5       a .header-anchor-container .header-anchor { visibility: hidden; }
		h5:hover a .header-anchor-container .header-anchor { visibility: visible; }
		h6       a .header-anchor-container .header-anchor { visibility: hidden; }
		h6:hover a .header-anchor-container .header-anchor { visibility: visible; }
		.header-anchor-container { margin-left: -26px; }
	</style>

	<script src="https://betteruptime.com/widgets/announcement.js" data-id="153552" async="async" type="text/javascript"></script>
	<body class="page">
		<input id="low-contrast" type="checkbox" class="is-hidden" />
		<input id="language-switcher" type="checkbox" class="is-hidden" />
		<input id="toggle-navbar" type="checkbox" class="is-hidden" />
		<input id="toggle-sidebar" type="checkbox" class="is-hidden" />

		{!Astro.props.navless && <NavBar root={Astro.props.root} />}

		<slot />

		<Footer />
		<LanguageModal />
	</body>
</html>
