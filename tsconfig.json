// Example: starter tsconfig.json for Astro projects
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["astro/client"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@assets/*": ["src/assets/*"],
      "@util/*": ["src/util/*"]
    }
  }
}
