// Example: starter tsconfig.json for Astro projects
{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["astro/client"],
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@data/*": ["src/data/*"],
			"@layouts/*": ["src/layouts/*"],
			"@util/*": ["src/util/*"]
		}
	}
}
